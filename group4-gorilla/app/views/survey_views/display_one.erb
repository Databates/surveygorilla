<p class="question-text"><%= @questions[0].text %></p>
<div class="container">
  <% @survey.questions.each do |question| %>
  <ol>
    <% question.answer_choices.each do |option| %>
    <li><%= option.text %></li>
    <% end %>
  </ol>
  <% end %>
  <button type="button" class="button">
    <a href="/surveys">Go back to All Surveys</a>
  </button>
  <button type="button" class="button">
    <a href="/view_your_surveys">Show me all MY Surveys!</a>
  </button>
</div>

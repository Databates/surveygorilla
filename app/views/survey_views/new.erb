<section class="content innerwidth">
  <section class="survey">
    <div class="container">
    <form id="new-survey" action='/survey/create' class="form"  method="POST">
      <label>Survey Title:</label><input type="text" class="w100" name="survey[title]"><br>
      <label>Survey Description:</label><input type="text" class="w100" name="survey[description]"><br>
      <input type="hidden" name="survey[user_id]" value="<%=session[:user_id]%>">
      <div class="button-wrapper">
        <input type="submit" value="next" class="button">
        <button type="button" class="button" onclick="window.location.href='/user/<%= current_user.id %>'">cancel</button>
      </div>
    </form> 
  </div>
  </section>
</section>